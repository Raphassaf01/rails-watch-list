<h1><%= @list.name %></h1>

<ul>
<% @list.bookmarks.each do |bookmark| %>
<li><h2>
<%= bookmark.movie.title %></h2></li>

<li><%= bookmark.movie.overview %></li>
<li><%= bookmark.movie.rating %></li>
<li><%= bookmark.comment %></li>
<li><%= link_to "Delete", bookmark_path(bookmark),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
<% end %>
</ul>
<p>
<%= link_to "Add a bookmark", new_list_bookmark_path(@list) %>
</p>
<p>
<%= link_to "Back to lists", lists_path %>
</p>
